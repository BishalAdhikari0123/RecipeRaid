PORT=5000
NODE_ENV=development

# Database (prefer single URL for Neon)
# Get this from Neon Console → Project → Connection Details
# Example: postgresql://USER:PASSWORD@HOST/dbname?sslmode=require
DATABASE_URL=
# Force SSL when using cloud Postgres (Neon requires SSL)
DB_SSL=true

# Optional fallback (local Postgres – used only if DATABASE_URL is empty)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=recipe_raid
DB_USER=postgres
DB_PASSWORD=your_password

# JWT
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRE=7d

# Supabase
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Client URL
CLIENT_URL=http://localhost:3000
